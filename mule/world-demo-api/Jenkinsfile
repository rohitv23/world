pipeline
{
 agent any
 stages
 {
 	stage('Build Application')
 	{
 		steps{
 				bat 'cd mule && cd world-demo-api-test && mvn clean install'
 			}
 	}
 	stage('Deploy Application to Mulesoft CloudHub')
 	{
 		steps{
 				bat 'cd mule && cd world-demo-api-test && mvn package deploy -DmuleDeploy -Duid=%USERNAME% -Dpwd=%PASSWORD%'
 			}
 	}
 	stage('Deploy To Nexus')
 	{
 		steps{
 				bat 'cd mule && cd world-demo-api-test && mvn deploy -DskipMunitTests -DaltDeploymentRepository=test::default::%NEXUS_URL%'
 			}
 	}
 }
}