pipeline
{
 agent any
 stages
 {
 	stage('Build Application')
 	{
 		steps{
 				bat 'cd mule && cd world-demo-api && mvn clean install'
 			}
 	}
 	stage('Deploy Application to Mulesoft CloudHub')
 	{
 		steps{
 				bat 'cd mule && cd world-demo-api && mvn package deploy -DmuleDeploy'
 			}
 	}
 	stage('Deploy To Nexus')
 	{
 		steps{
 				bat 'cd mule && cd world-demo-api && mvn deploy -DskipMunitTests -DaltDeploymentRepository=test::default::http://localhost:8089/nexus/content/repositories/test'
 			}
 	}
 }
}